<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:configChanges="keyboardHidden|orientation|screenSize"
    package="com.example.teamCreator">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo_image_blue"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_image_blue"
        android:supportsRtl="true"
        android:theme="@style/Theme.TS"
        tools:targetApi="31">
        <activity
            android:name="com.myApplication.teamCreator.BackgroundActivity"
            android:exported="false" />
        <activity
            android:name="com.myApplication.teamCreator.ShowTeamMembersActivity"
            android:exported="false" />
        <activity
            android:name="com.myApplication.teamCreator.CreateTeamsActivity"
            android:exported="false" />
        <activity
            android:name="com.myApplication.teamCreator.PlayerInspectActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.myApplication.teamCreator.AddPlayerActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.myApplication.teamCreator.AddGameActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.myApplication.teamCreator.StartActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.myApplication.teamCreator.GamesActivity"
            android:exported="false" />
        <activity
            android:name="com.myApplication.teamCreator.PlayerActivity"
            android:exported="false" />
        <activity
            android:name="com.myApplication.teamCreator.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>