<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.myApplication.teamCreator.GamesActivity"
    android:background="@drawable/gradient_background">

    <TextView
        android:layout_width="500dp"
        android:layout_height="60dp"
        android:text="@string/gamesHeader"
        android:gravity="center"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="-10dp"
        android:background="@drawable/rounded_corner"
        android:id="@+id/gamesHeader" />

    <ImageButton
        android:id="@+id/closeBtn"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_corner"
        android:contentDescription="@string/addplayerimagebutton"
        android:src="@drawable/arrowback_image" />

    <ImageButton
        android:id="@+id/addGameButton"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginEnd="-10dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/addgame_image"
        android:contentDescription="@string/addgameimagebutton"
        android:background="@drawable/rounded_corner"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewGame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gamesHeader"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp" />

</RelativeLayout>