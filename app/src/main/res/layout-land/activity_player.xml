<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.myApplication.teamCreator.PlayerActivity"
    android:background="@drawable/gradient_background">

    <TextView
        android:layout_width="500dp"
        android:layout_height="60dp"
        android:text="@string/player_header"
        android:gravity="center"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="-10dp"
        android:background="@drawable/rounded_corner"
        android:id="@+id/playerHeader" />

    <ImageButton
        android:id="@+id/addPlayerButton"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="-10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_corner"
        android:contentDescription="@string/addplayerimagebutton"
        android:src="@drawable/add_image" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewPlayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/playerHeader"
        android:layout_margin="10dp" />

</RelativeLayout>